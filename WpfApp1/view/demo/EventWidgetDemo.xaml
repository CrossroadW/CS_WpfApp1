<Window
    x:Class="WpfApp1.view.demo.EventWidgetDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.view.demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EventWidgetDemo"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Name="btn"
            Width="100"
            Height="50"
            Click="Button_Click"
            Content="Click Me" MouseEnter="Btn_MouseEnter"  MouseLeave="Btn_MouseLeave"/>
    </Grid>
</Window>
