<Window
    x:Class="WpfApp1.view.demo.ResourceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.view.demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ResourceWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="solidColor" Color="Red" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button
                Margin="10"
                Click="Button_Click"
                Content="update" />
            <Button
                Margin="10"
                BorderBrush="{StaticResource solidColor}"
                BorderThickness="5"
                Content="update" />
            <Button
                Margin="10"
                BorderBrush="{DynamicResource solidColor}"
                BorderThickness="5"
                Content="update" />

        </StackPanel>
    </Grid>
</Window>
