<Window
    x:Class="WpfApp1.view.demo.BindingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.view.demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BindingWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <!--<StackPanel>
            <Slider
                Name="slider"
                Margin="5"
                ValueChanged="slider_ValueChanged" />
            <TextBox
                Name="txt1"
                Height="30"
                Margin="5"
                TextChanged="txt1_TextChanged" />
            <TextBox
                Name="txt2"
                Height="30"
                Margin="5"
                TextChanged="txt2_TextChanged" />
            <TextBox
                Name="txt3"
                Height="30"
                Margin="5"
                TextChanged="txt3_TextChanged" />
        </StackPanel>-->
        <StackPanel>
            <Slider Name="slider" Margin="5" />
            <TextBox
                Name="txt1"
                Height="30"
                Margin="5"
                Text="{Binding ElementName=slider, Path=Value, Mode=OneTime}" />
            <TextBox
                Name="txt2"
                Height="30"
                Margin="5"
                Text="{Binding ElementName=slider, Path=Value, Mode=OneWay}" />
            <TextBox
                Name="txt3"
                Height="30"
                Margin="5"
                Text="{Binding ElementName=slider, Path=Value, Mode=OneWayToSource}" />
            <TextBox
                Name="txt4"
                Height="30"
                Margin="5"
                Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</Window>
