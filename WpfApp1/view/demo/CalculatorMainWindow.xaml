<Window
    x:Class="WpfApp1.view.demo.CalculatorMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.view.demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TriggerEventWindowDemo"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Name="txtDisplay"
            Height="50"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            FontSize="32"
            IsReadOnly="True"
            TextAlignment="Right" />
        <Grid Margin="10,70,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Row 1  -->
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Click="Button_Click"
                Content="1" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Click="Button_Click"
                Content="2" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Click="Button_Click"
                Content="3" />
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Click="Button_Operation"
                Content="+" />

            <!--  Row 2  -->
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Click="Button_Click"
                Content="4" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Click="Button_Click"
                Content="5" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Click="Button_Click"
                Content="6" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Click="Button_Operation"
                Content="-" />

            <!--  Row 3  -->
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Click="Button_Click"
                Content="7" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Click="Button_Click"
                Content="8" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Click="Button_Click"
                Content="9" />
            <Button
                Grid.Row="2"
                Grid.Column="3"
                Click="Button_Operation"
                Content="*" />

            <!--  Row 4  -->
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Click="Button_Clear"
                Content="C" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Click="Button_Click"
                Content="0" />
            <Button
                Grid.Row="3"
                Grid.Column="2"
                Click="Button_Equal"
                Content="=" />
            <Button
                Grid.Row="3"
                Grid.Column="3"
                Click="Button_Operation"
                Content="/" />
        </Grid>
    </Grid>
</Window>
